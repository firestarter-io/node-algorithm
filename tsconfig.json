{
	"compilerOptions": {
		"lib": ["es2021"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"~controllers/*": ["controllers/*"],
			"~types/*": ["types/*"],
			"~config": ["config"],
			"~config/*": ["config/*"],
			"~data": ["data"],
			"~profilers/*": ["profilers/*"],
			"~core/*": ["core/*"],
			"~getdata/*": ["core/getdata/*"],
			"~burncode/*": ["core/burncode/*"],
			"~utils/*": ["core/utils/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
